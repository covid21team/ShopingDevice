    ➠ Hiện số người đánh giá sản phẩm         ✔

    ❦ Nơi sử dụng:
        ☞ Public_ShareProduct
        ☞ Form Product ➧ thuộc Control Covid21

    ✹ Một số form share
        ➽ Product_ReviewRatingOfUser
-->

@model IEnumerable<TSP_Covid21.Models.ShopEntity.RATINGPRODUCT>

@{
    var sumRating = Model.Sum(p => p.RATE);
    var countRating = Model.Count();
    float ratioRating = (float)sumRating / countRating;
}

<div>
    <div class="product-rating">
        <!--fas fa-star-half-alt-->
        <!--Sao đầu thứ 1-->
        @Html.Partial("Product_ReviewRatingOfUser", ratioRating)

    </div>
    <a class="review-link" href="#">@countRating Review(s)</a>
</div>


