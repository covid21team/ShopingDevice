@{
    var loadProductNew = Html.Partial("Home_LoadProductNew", db.loadProductNew());
    loadProductNew = new MvcHtmlString(loadProductNew.ToString());
}
@loadProductNew

<!-- /SECTION -->
<!-- HOT DEAL SECTION -->
<div id="hot-deal" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="hot-deal">
                    <ul class="hot-deal-countdown">
                        <li id="days">
                            <div>
                                <h3 class="number">10</h3>
                                <span class="label">Days</span>
                            </div>
                        </li>
                        <li id="hours">
                            <div>
                                <h3 class="number">10</h3>
                                <span class="label">Hours</span>
                            </div>
                        </li>
                        <li id="minutes">
                            <div>
                                <h3 class="number">00</h3>
                                <span class="label">Mins</span>
                            </div>
                        </li>
                        <li id="seconds">
                            <div>
                                <h3 class="number">00</h3>
                                <span class="label">Secs</span>
                            </div>
                        </li>
                    </ul>
                    <h2 class="text-uppercase">hot deal this week</h2>
                    <p>New Collection Up to 50% OFF</p>
                    <a class="primary-btn cta-btn" href="#">Shop now</a>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /HOT DEAL SECTION -->
