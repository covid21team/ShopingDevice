<!-- Login -->

<div id="id01_login" class="modal_login">
    <div class="login-box">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <form>
                <div class="user-box">
                    <input type="text" style="background: none" name="user" required="">
                    <label class="lb">Username</label>
                </div>
                <div class="user-box1">
                    <input type="password" name="pass" id="pass" style="background: none" required="">
                    <label class="lb">Password</label>
                    <span class="eye" onclick="my2Function()">
                        <i id="hidel6" class="fa fa-eye-slash"></i>
                        <i id="hidel5" class="fa fa-eye"></i>
                    </span>
                </div>

                <a href="#">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <label for="filebutton" id="upload-btn"><i class="fas fa-user-plus"></i> login</label>
                </a>
                <input id="filebutton" class="input-file" type="submit" style="display:none;">

                <a href="#" style="margin-left: 18px;" onclick="document.getElementById('id01_signin').style.display='block'">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <i class="fas fa-user-plus" id="signin"></i> signin
                </a>
            </form>
        }
    </div>
</div>

<!-- End Login -->
<!-- Sigin -->

<div id="id01_signin" class="modal_login">
    <div class="login-box">
        <h2>SignUp</h2>
        <form>

            <div class="user-box">
                <input type="text" name="user" id="user" required="">
                <label>Username</label>
            </div>

            <div id="message_user" style="position: absolute; margin-top: -40px ;border: 1px solid rgb(0, 0, 0); margin-left: 210px; background: rgb(246, 247, 191);border-radius:5%; z-index: 50;">
                <p id="text_user" style="color: red">Use already exists</p>
            </div>

            <div class="user-box1">
                <input type="password" id="pass1" name="pass1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                <label>Password</label>
                <span class="eye" onclick="myFunction()">
                    <i id="hidel4" class="fa fa-eye-slash"></i>
                    <i id="hidel3" class="fa fa-eye"></i>

                </span>

            </div>
            <div class="user-box1">
                <input type="password" id="pass" name="" required="">
                <label>Confirm Password</label>
                <span class="eye" onclick="my1Function()">
                    <i id="hidel2" class="fa fa-eye-slash"></i>
                    <i id="hidel1" class="fa fa-eye"></i>
                </span>

            </div>

            <div class="user-box">
                <input type="text" id="phone" name="phone" required="">
                <label>Phone number</label>
            </div>

            <div id="message_phone" style="position: absolute; margin-top: -40px ;border: 1px solid rgb(0, 0, 0); margin-left: 140px; background: rgb(246, 247, 191);border-radius:5%; z-index: 50;">
                <p id="text_phone" style="color: red">NumberPhone already exists</p>
            </div>

            <div class="user-box">
                <input type="text" name="" required="">
                <label>Full Name</label>
            </div>
            <div id="message" style="position: absolute; margin-top: -240px;border: 1px solid rgb(0, 0, 0); margin-left:90px; background: rgb(246, 247, 191);border-radius:5%; z-index: 50;">

                <h3 style="margin-left: 10px;">Password must contain the following:</h3>
                <p id="letter" class="invalid">A lowercase letter</p>
                <p id="capital" class="invalid">A capital (uppercase) letter</p>
                <p id="number" class="invalid">A number</p>
                <p id="length" class="invalid">Minimum 8 characters</p>
            </div>
            <a href="#" onclick="Login()">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <i class="fas fa-sign-in-alt"></i> login
            </a>
            <a href="#" style="margin-left: 25px;">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <i class="fas fa-user-plus"></i> signin
            </a>
        </form>
    </div>
</div>

<!-- End Sigin -->



<script>
    var modal = document.getElementById('id01_login');
    var modal1 = document.getElementById('id01_signin');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal || event.target == modal1) {
            modal.style.display = "none";
            modal1.style.display = "none";
        }
    }

    function Login() {
        modal1.style.display = "none";
    }


</script>

