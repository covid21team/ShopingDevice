<!--
    ➠ Load 5 sản phẩm top selling vào bên trong form Categories                                              ✔

    ➠ Trên bảng top này cũng có thể bấm vào hình ảnh hay tên sản phẩm thì có thể đi đến chi tiết sản phẩm    ✔

    ❦ Nơi sử dụng:
        ☛ Form Categories ➧ thuộc Control Covid21

    ⛱ Form có thể đến
        ➣ Product
-->

@model PagedList.IPagedList<TSP_Covid21.Models.ShopEntity.PRODUCT>

<div class="aside">
    <h3 class="aside-title">Top selling</h3>
    @foreach (var item in Model)
    {
        <div class="product-widget">
            <div class="product-img">
                <a href="@Url.Action("Product","Covid21",new { productId = item.PRODUCTID})">
                    <img src="~/@item.MAINPIC" alt="" style="width: 60px; height: 60px; object-fit: contain">
                </a>
            </div>
            <div class="product-body">
                <p class="product-category">Category</p>
                <h3 class="product-name"><a href="@Url.Action("Product","Covid21",new { productId = item.PRODUCTID})">@item.PRODUCTNAME</a></h3>
                @{
                    var temp = String.Format("{0:#,##0.##}", @item.PRODUCTPRICE);
                }
                <h4 class="product-price">@temp  VNĐ</h4>
            </div>
        </div>
    }
</div>
