@model PagedList.IPagedList<TSP_Covid21.Models.ShopEntity.PRODUCT>

<div class="col-md-4 col-xs-6">
    <div class="section-title">
        <h4 class="title">Top SmartPhone</h4>
        <div class="section-nav">
            <div id="slick-nav-3" class="products-slick-nav"></div>
        </div>
    </div>

    <div class="products-widget-slick" data-nav="#slick-nav-3">
        @foreach (var item in Model)
        {
            <div>
                <div class="product-widget">
                    <div class="product-img">
                        <img src="~/@item.MAINPIC" alt="">
                    </div>
                    <div class="product-body">
                        <p class="product-category">Category</p>
                        <h3 class="product-name"><a href="#">@item.PRODUCTNAME</a></h3>
                        @{
                            var temp = String.Format("{0:#,##0.##}", @item.PRODUCTPRICE);
                        }
                        <h4 class="product-price">@temp</h4>
                    </div>
                </div>
            </div>
        }


    </div>
</div>