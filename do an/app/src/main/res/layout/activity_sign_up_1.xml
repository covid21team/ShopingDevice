<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".SignUpActivity">

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gl"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  <ImageButton
      android:id="@+id/btnSignUpActivityBack"
      android:src="@drawable/ic_baseline_west_50"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_width="wrap_content"
      android:background="@null"
      android:layout_height="wrap_content"/>

  <TextView
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@id/gl"
      android:text="Đăng Ký"
      android:textSize="50dp"
      android:layout_marginBottom="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:startIconDrawable="@drawable/custom_user_icon"
      app:layout_constraintTop_toBottomOf="@id/gl"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:endIconMode="clear_text"
      android:layout_marginTop="8dp"
      android:hint="Họ và tên">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editSignUpActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout1"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:startIconDrawable="@drawable/ic_baseline_date_range_24"
      app:layout_constraintTop_toBottomOf="@id/textInputLayout"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      app:endIconMode="clear_text"
      android:hint="Ngày/Tháng/Năm">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editSignUpActivityDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:id="@+id/txtSignUpActivityGT"
      app:layout_constraintTop_toBottomOf="@id/textInputLayout1"
      app:layout_constraintLeft_toLeftOf="parent"
      android:text="Chọn giới tính:"
      android:textSize="18dp"
      android:layout_marginTop="11dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <RadioButton
      android:id="@+id/rdSignUpActivityNam"
      android:text="Nam"
      app:layout_constraintTop_toBottomOf="@id/textInputLayout1"
      app:layout_constraintLeft_toRightOf="@id/txtSignUpActivityGT"
      app:layout_constraintRight_toLeftOf="@id/rdSignUpActivityNu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <RadioButton
      android:id="@+id/rdSignUpActivityNu"
      android:text="Nữ"
      app:layout_constraintTop_toBottomOf="@id/textInputLayout1"
      app:layout_constraintLeft_toRightOf="@id/rdSignUpActivityNam"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout2"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:startIconDrawable="@drawable/ic_baseline_add_location_alt_24"
      app:layout_constraintTop_toBottomOf="@id/txtSignUpActivityGT"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:endIconMode="clear_text"
      android:layout_marginTop="8dp"
      android:hint="Nhập địa chỉ">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editSignUpActivity"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/btnSignUpActivityNext"
      android:text="Tiếp theo"
      android:layout_marginTop="30dp"
      android:background="@drawable/button_login"
      app:backgroundTint="@null"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>

  </androidx.constraintlayout.widget.ConstraintLayout>