<script>
    $("#signup_account").click(function () {
        $("#message_PhoneInf").hide();
        var user = $("#user_signup").val();
        var pass = $("#pass1").val();
        var fullname = $("#fullname").val();
        var phone = $("#phone").val();
        var email = $("#email").val();
        var code = $("#script").val();

        if (user.trim().length > 0 && pass.trim().length > 0 && fullname.trim().length > 0 && phone.trim().length > 0 && phone.length == 10 && pass.length >= 8 && user.length < 30) {
            $("#loading_web").show();
            $.ajax({
                url: '@Url.Action("Signup","Account")',
                type: 'POST',
                data: {
                    user: user,
                    pass: pass,
                    fullname: fullname,
                    phone: phone,
                    email: email,
                    code: code,
                },
                success: function (result) {
                    $('#loading_web').hide();
                    if (result == 'True') {
                        $("#message_Script").hide();
                        alert("Đã đăng ký thành công");
                        $("#id01_signin").hide();
                    } else if (result == "CodeFail") {
                        $("#message_Script").show();
                    }
                },
                error: function (result) {
                    $('#loading_web').hide();
                }
            });
        } else {
            checkInput(user, pass, phone, fullname, email, code);
        }
    });

    function checkInput(user, pass, phone, fullname, email, code) {
        if (user.trim() < 1) {
            $("#message_UserInf").show();
        } else {
            $("#message_UserInf").hide();
        }

        if (pass.trim() < 1) {
            $("#message_Pass").hide();
            $("#message_PassInf").show();
        } else {
            $("#message_PassInf").hide();
        }

        if (phone.trim() < 1) {
            $("#message_phone").hide();
            $("#message_phone_1").hide();
            $("#message_PhoneInf").show();
        } else {
            $("#message_PhoneInf").hide();
        }

        if (fullname.trim() < 1) {
            $("#message_FullNameInf").show();
        } else {
            $("#message_FullNameInf").hide();
        }

        if (email.trim() < 1) {
            $("#message_email").hide();
            $("#message_EmailInf").show();
        } else {
            $("#message_EmailInf").hide();
        }
    }
</script>

