
@{
    ViewBag.Title = "PictureManager";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";

    TSP_Covid21.Areas.Admin.Controllers.PictureManagerController PC = new TSP_Covid21.Areas.Admin.Controllers.PictureManagerController();
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Hình ảnh</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <div class="d-md-flex">

                    <ol class="breadcrumb ms-auto">
                        <li><a href="#" class="fw-normal"></a></li>
                    </ol>
                    <a class="btn btn-danger  d-none d-md-block pull-right ms-3 hidden-xs hidden-sm " id="btnUpPic">
                        Tải ảnh lên
                    </a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!--up picture-->
    <div id="UpPic" class="modal" style="z-index: 50; ">
        <div id="customers1" style="background: red">
            <div style="float: none; margin-left: 40%">
                <label for="inputUpPic">
                    <span>
                        <i class="fas fa-folder-open " style="color:#fad859;"></i>
                        Open file
                    </span>
                </label>
                <input id="inputUpPic" class="input-file" type="file" multiple accept="image/*"
                       style="display: none" />
            </div>
            <div class="card-deck" id="appearPicUp">

            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->


    @{
        IEnumerable<string> listPic = PC.listPic();
    }
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">

                    <div class="container-fluid">
                        <div class="row">
                            @foreach (var item in listPic)
                            {
                                <div class="col order-sm-2">
                                    <img src="~/@item" style="height: 350px; width: 250px; object-fit:contain" alt="">
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
</div>

<script>
    $("body").on("click", ".removePic", function () {
        $(this).parent().parent().parent().parent().parent().remove();
    });

    $("#btnUpPic").change(function (event) {


        var files = event.target.files;

        for (var i = 0; i < files.length; i++) {
            var file = files[i];
            var create = document.createElement("div");

            create.innerHTML = '<div class="card mb-4 pictureUp" style="width: 104px; float: left;">' +
                '<figure class="snip0068 yellow">' +
                '<img src="/Asset/images/' + file.name + '"/>' +
                '<figcaption> ' +
                '<div>' +
                '<span class="removePic"><i class="far fa-trash-alt"></i> Remove</span>' +
                '</div>' +
                '</figcaption>' +
                '</figure>' +
                '</div>';

            $("#appearPicUp").prepend(create);
        }
    });
</script>

<script>
    $("#btnUpPic").click(function (){
        $("#UpPic").show();
    })

    var model = document.getElementById('UpPic');
    var divmodel = document.getElementById('customers1');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == divmodel) {
            model.style.display = "none";
        }
    }
</script>