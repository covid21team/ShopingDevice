@model int

@if (Model == 1)
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_deer.png" />
}
else if (Model == 2)
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_gourd.png" />
}
else if (Model == 3)
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_chicken.png" />
}
else if (Model == 4)
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_fish.png" />
}
else if (Model == 5)
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_crab.png" />
}
else
{
    <img src="~/Areas/Game/Asset/Pic_Game/Dice/dice_shrimp.png" />
}