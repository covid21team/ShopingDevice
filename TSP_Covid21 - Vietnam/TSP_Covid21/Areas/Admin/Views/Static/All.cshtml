                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- RECENT SALES -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <div class="d-md-flex mb-3">
                        <h3 class="box-title mb-0">Hóa đơn</h3>
                        <div class="col-md-3 col-sm-4 col-xs-6 ms-auto">
                            <select class="form-select shadow-none row border-top">
                                <option>March 2021</option>
                                <option>April 2021</option>
                                <option>May 2021</option>
                                <option>June 2021</option>
                                <option>July 2021</option>
                            </select>
                        </div>
                    </div>
                    <style>
                        .txt-oflo_listProduct {
                            width: 100px;
                        }
                    </style>
                    <div class="table-responsive">
                        <table class="table no-wrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">ID</th>
                                    <th class="border-top-0">Người đặt</th>
                                    <th class="border-top-0">Sản phẩm</th>
                                    <th class="border-top-0">Ngày đặt hàng</th>
                                    <th class="border-top-0">Trạng thái</th>
                                    <th class="border-top-0">Tổng hóa đơn</th>
                                </tr>
                            </thead>
                            @{
                                IEnumerable<TSP_Covid21.Models.ShopEntity.BILL> listBill = SC.loadBill();
                            }
                            <tbody>
                                @foreach (var item in listBill)
                                {
                                    <tr>
                                        <td>@item.BILLID</td>
                                        <td>@item.USER</td>
                                        @{
                                            string listProduct = "";
                                            foreach (var item1 in item.BILLDETAIL)
                                            {
                                                listProduct += item1.AMOUNT + "x " + item1.PRODUCT.PRODUCTNAME + ", ";
                                            }
                                        }
                                        <td class="txt-oflo_listProduct">@listProduct</td>
                                        <td>@item.DATECREATE</td>
                                        <td class="txt-oflo">Đang chờ xét duyệt</td>
                                        @{
                                            var totalBill = String.Format("{0:#,##0.##}", item.TOTALBILL);
                                            totalBill += "đ";
                                        }
                                        <td><span class="text-success">@totalBill</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
